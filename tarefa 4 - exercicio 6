
/*
6) Elaborar um programa que efetue a leitura de três valores (A, B e C)
e apresente como resultado final à soma dos quadrados dos três valores lidos.

*/
import java.util.Scanner;

public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
    System.out.println("Informe o valor de A: ");
    double letra_a = sc.nextDouble();
    
    System.out.println("Informe o valor de B: ");
    double letra_b = sc.nextDouble();
    
    System.out.println("Infome o valor de C: ");
    double letra_c = sc.nextDouble();
    
    double calculo = Math.pow(letra_a, 2) + Math.pow(letra_b, 2) + Math.pow(letra_c, 2);
    
    System.out.println("A soma dos quadrados dos três valores é:" +calculo);
    
    sc.close();
    }
}